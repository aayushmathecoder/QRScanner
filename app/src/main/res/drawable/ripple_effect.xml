<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="10dip" />
        <stroke android:width="1dip" android:color="#009EE3" />
        <gradient android:angle="-90" android:startColor="@color/gold_yellow_text" android:endColor="#009EE3"  />
    </shape>
    </item>
         <!-- pressed -->
    <item android:state_focused="true"><shape android:shape="rectangle"  >
        <corners android:radius="10dip" />
        <stroke android:width="1dip" android:color="#009EE3" />
        <solid android:color="@color/button_pressed"/>
    </shape>

    </item>
        <!-- focused -->
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#009EE3" />
            <gradient android:angle="-90" android:startColor="#009EE3" android:endColor="@color/gold_yellow_text" />
        </shape>
</item>
<!--
    </item>android:drawable="@color/button_default"/>--> <!-- default -->
</selector>