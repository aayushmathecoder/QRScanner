<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parent_quiz_layout"
    android:layout_height="match_parent"

    >

<ImageView
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/w1"
    android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/parent_qa_layout"
        android:layout_marginTop="@dimen/layout_top_margin">


        <TextView
            android:id="@+id/question_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/question_textview_padding"
            android:paddingTop="@dimen/question_textview_padding"
            android:textAlignment="center"
            android:textColor="@color/zxing_encode_view"
            android:textSize="@dimen/question_text_size"
            android:textStyle="bold"
            tools:text="What is the full form of T.T.H?" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/options_layout"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>
  </RelativeLayout>